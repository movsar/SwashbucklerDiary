@page "/lanReceiver"
@namespace SwashbucklerDiary.Pages
@inherits PageComponentBase

<MyAppBar Title="@(I18n.T("Export.Receive.Name"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    @if (UDPSending)
    {
        <MRow Style="margin-top:20vh;"
              AlignContent="@AlignContentTypes.Center"
              Justify="@JustifyTypes.Center">
            <MCol Class="text-subtitle-1 text-center"
                  Cols="12">
                @(I18n.T("lanReceiver.Waiting for connection"))
            </MCol>
            <MCol Cols="6">
                <MProgressLinear Indeterminate="true"
                                 Rounded="true"
                                 Height="6"
                                 Color="grey">
                </MProgressLinear>
            </MCol>
        </MRow>
    }

</ScrollContainer>

<LANTransferDialog @bind-Value="ShowTransferDialog"
                   Title="@(I18n.T("lanReceiver.Receiving"))"
                   Ps="Ps"
                   BytesReceived="BytesReceived"
                   TotalBytesToReceive="TotalBytesToReceive"
                   OnCancel="StopTransmission">
</LANTransferDialog>
