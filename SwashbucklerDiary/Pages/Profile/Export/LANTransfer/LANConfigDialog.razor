@namespace SwashbucklerDiary.Pages
@inherits FocusDialogComponentBase

<MMDialog @ref="myDialog"
          MyValue="Value"
          MyValueChanged="ValueChanged"
          MaxWidth="480">
    <MForm @ref="@MForm"
           Model="@configModel"
           OnValidSubmit="HandleOnOK"
           EnableValidation="true"
           EnableI18n="true">
        <MCard Rounded="@("lg")">
            <MCardTitle Class="font-weight-bold">
                @(I18n.T("Export.LAN.Config.Name"))
                <MSpacer></MSpacer>
                <MButton Icon="true" OnClick="HandleOnCancel">
                    <MIcon>mdi-close</MIcon>
                </MButton>
            </MCardTitle>
            <MCardText Class="pb-0">
                <MTextField @bind-Value="configModel.DeviceName"
                @ref="TextField"
                            Dense="true"
                            Outlined="true"
                            spellcheck="false"
                            Label="@(I18n.T("Export.LAN.Config.DeviceName"))">
                </MTextField>
                <MTextField @bind-Value="configModel.ScanPort"
                            Type="number"
                            TValue="int"
                            Dense="true"
                            Outlined="true"
                            spellcheck="false"
                            Label="@(I18n.T("Export.LAN.Config.ScanPort"))"
                            NumberProps="@(prop => { prop.Min = 1204; prop.Max = 65535; prop.HideControl = true; })">
                </MTextField>
                <MTextField @bind-Value="configModel.TransmissionPort"
                            Type="number"
                            TValue="int"
                            Dense="true"
                            Outlined="true"
                            spellcheck="false"
                            Label="@(I18n.T("Export.LAN.Config.TransmissionPort"))"
                            NumberProps="@(prop => { prop.Min = 1204; prop.Max = 65535; prop.HideControl = true; })">
                </MTextField>
            </MCardText>
            <MCardActions>
                <MButton Text="true" OnClick="OnReset">
                    @(I18n.T("Share.Restore Default"))
                </MButton>
                <MSpacer></MSpacer>
                <MButton Text="true" OnClick="HandleOnCancel">
                    @(I18n.T("Share.Cancel"))
                </MButton>
                <MButton Text="true"
                         Type="submit"
                         Color="primary">
                    @(I18n.T("Share.OK"))
                </MButton>
            </MCardActions>
        </MCard>
    </MForm>
</MMDialog>
