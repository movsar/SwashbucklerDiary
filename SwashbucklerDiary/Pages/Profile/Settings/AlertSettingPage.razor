@page "/alertSetting"
@namespace SwashbucklerDiary.Pages
@inherits PageComponentBase

<MyAppBar Title="@(I18n.T("Setting.Display.Alert.Name"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="setting-card"
           Elevation="0"
           Rounded="@("lg")">
        <MListItem OnClick="()=>ShowTimeout=true">
            <MListItemIcon>
                <MIcon Class="list-item-icon">
                    mdi-timer-outline
                </MIcon>
            </MListItemIcon>
            <MListItemContent>
                @(I18n.T("Setting.Display.Alert.AlertTimeout.Name"))
            </MListItemContent>
            <MListItemContent Class="setting-state">
                <MListItemSubtitle>
                    @(Timeout.ToString() + "s")
                </MListItemSubtitle>
            </MListItemContent>
            <MListItemAction>
                <MIcon>mdi-chevron-right</MIcon>
            </MListItemAction>
        </MListItem>
    </MCard>

    <MCard Class="setting-card"
           Elevation="0"
           Rounded="@("lg")">
        <MListItem>
            <MListItemIcon>
                <MIcon Class="list-item-icon">
                    mdi-trophy-outline
                </MIcon>
            </MListItemIcon>
            <MListItemContent>
                @(I18n.T("Setting.Display.Alert.Achievement.Name"))
            </MListItemContent>
            <MListItemAction>
                <MSwitch @bind-Value="AchievementsAlert"
                         TValue="bool"
                         OnChange="SettingChange(SettingType.AchievementsAlert)"
                         Dense="true"
                         Inset="true"
                         Color="white"
                         TrackColor="@MSwitchTrackColor(AchievementsAlert)">
                </MSwitch>
            </MListItemAction>
        </MListItem>
    </MCard>

</ScrollContainer>

<SelectIconDialog @bind-Value="ShowTimeout"
@bind-Item="@Timeout"
                  Title="@(I18n.T("Setting.Display.Alert.AlertTimeout.Name"))"
                  Items="Timeouts"
                  Text="@(item=>item.Key + "s")">
</SelectIconDialog>
