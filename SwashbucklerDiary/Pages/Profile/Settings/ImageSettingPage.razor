@page "/imageSetting"
@namespace SwashbucklerDiary.Pages
@inherits PageComponentBase

<MAppBar App="true"
         Elevation="0">
    <MButton Icon="true"
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MToolbarTitle Class="font-weight-bold">
        @(I18n.T("Setting.Display.Diary.Image.Name"))
    </MToolbarTitle>
    <MSpacer></MSpacer>
    <MButton Icon="true"
             OnClick="()=>ShowConfimDelete=true">
        <MIcon>
            mdi-delete-outline
        </MIcon>
    </MButton>
</MAppBar>

<ScrollContainer Id="all-images-scroll">
    <ImageResourceCardList Value="ImageResources"
                           ScrollParent="@("#all-images-scroll")">
    </ImageResourceCardList>
</ScrollContainer>

<DeleteDialog @bind-Value="ShowConfimDelete"
              Title="@(I18n.T("Share.Delete"))"
              Content="@(I18n.T("Setting.Display.Diary.Image.DeleteUnusedImage"))"
              OnOK="DeleteUnusedImageResource">
</DeleteDialog>